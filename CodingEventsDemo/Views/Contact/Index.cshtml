@model List<CodingEventsDemo.Models.Contact>

<h1>All Contacts</h1>

@if (Model.Count == 0)
{
    <p>No Contacts yet!</p>
}
else
{
    <table class="table">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>City</th>
            <th>View</th>
        </tr>
    @foreach (var contact in Model)
    {
        <tr>
            <td>@contact.Id</td>
            <td>@contact.Name</td>
            <td>@contact.Email</td>
            <td>@contact.PhoneNumber</td>
            <td>@contact.City</td>
            <td><a asp-controller="Contact" asp-action="View" asp-route-id="@contact.Id">View</a></td>
        </tr>
    }
    </table>
}